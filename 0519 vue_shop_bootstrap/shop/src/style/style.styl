$font = '標楷體'
$bg1 = url('../assets/0401.jpg')
$bg2 = url('../assets/0402.jpg')

#app
  width: 1024px
  height 768px
  margin: auto
#top
  width 1024px
  height 120px
  background-image $bg1
  color white
  font-family $font
  text-align center
  font-size 52px
  text-shadow 10px 10px 15px black 
  line-height: 120px

#marquee  
  width 100%
  height 30px
  font-family: $font
  line-height: 30px
  background-image: $bg2
  color blue
  font-size: 19px
  
#content
  font-family: $font
  background-image: $bg2
  table
    margin: auto
  tr
    height 150px
  td
    vertical-align middle
    text-align center
    &:first-child
      width 200px
    &:not(first-child)
      width 300px
    img 
      height 150px
#footer
  width 100%
  height 78px
  color: white
  font-family: $font
  text-align: left 
  line-height: 200%
  background-color: #660